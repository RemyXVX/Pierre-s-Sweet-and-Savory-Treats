@{
  Layout="_Layout";
}

@model PierresTreats.Models.Flavor

<h1>Add a flavor:</h1>
<hr />

@using (Html.BeginForm())
{
  <div>
  @Html.LabelFor(m => m.FlavorType, new { @class = "control-label" })
  @Html.TextBoxFor(m => m.FlavorType, new { @class = "form-control", @required = "required" })
  <br>
  @Html.LabelFor(m => m.FlavorDescription, new { @class = "control-label" })
  @Html.TextBoxFor(m => m.FlavorDescription, new { @class = "form-control", @required = "required" })
  <br>
  <input type="submit" class="btn btn-outline-secondary" value="Add Flavor">
  </div>
}
