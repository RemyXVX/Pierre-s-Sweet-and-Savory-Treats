@{
  Layout="_Layout";
}

@using PierresTreats.Models;

<h1>Flavor(s)</h1>
<hr />

@if (Model.Count == 0)
{
  <h2>Sadical, there aren't any flavor(s)..</h2>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
<div>
  <span>@Html.ActionLink("Add new flavor(s)", "Create")</span>
  <br>
  <span>@Html.ActionLink("Treats List", "Index", "Treats")</span>
</div>
