@{
  Layout="_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add A Treat</h2>
<h4>@Html.DisplayFor(model => model.FlavorType)</h4>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId", null, new { @class="btn btn-secondary dropdown-toggle" })
  <br>
  <input type="submit" class="btn btn-outline-secondary" value="Save"/>
}
<br>
<div>
  <span>@Html.ActionLink("Flavors List", "Index")</span>
  <br>
  <span>@Html.ActionLink("Treats List", "Index", "Treats")</span>
</div>
<br>
