@{
  Layout="_Layout";
}

@using PierresTreats.Models;

<h1>Treat(s)</h1>
<hr />

@if (Model.Count == 0)
{
  <h2>Sadical, there aren't any treat(s)..</h2>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
<div>
  <span>@Html.ActionLink("Add new Treat(s)", "Create")</span>
  <br>
  <span>@Html.ActionLink("Flavors List", "Index", "Flavors")</span>
</div>
