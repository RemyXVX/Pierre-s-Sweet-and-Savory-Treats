@{
  Layout="_Layout";
}

@model PierresTreats.Models.Treat

<h2>Let's making some changes</h2>
<hr />

@Html.DisplayNameFor(m => m.TreatName): @Html.DisplayFor(m => m.TreatName)
@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.TreatId)

  @Html.LabelFor(m => m.TreatName)
  @Html.EditorFor(m => m.TreatName)
  <br>
  @Html.LabelFor(m => m.TreatDescription)
  @Html.EditorFor(m => m.TreatDescription)
  <br>
  @Html.LabelFor(m => m.TreatQuantity)
  <select name="TreatQuantity">
    @for (int i = 1; i <= 10; i++)
    {
        <option value="@i">@i</option>
    }
</select>
  @* @Html.EditorFor(m => m.TreatQuantity) *@
  <br>
  <input type="submit" class="btn btn-outline-secondary" value="Save" />
}

<br>
<div>
  <span>@Html.ActionLink("List of Flavors", "Index")</span>
  <br>
  <span>@Html.ActionLink("List of Treats", "Index", "Treats")</span>
</div>
