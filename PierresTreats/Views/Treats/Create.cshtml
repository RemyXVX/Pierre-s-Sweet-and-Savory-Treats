@{
  Layout="_Layout";
}

@model PierresTreats.Models.Treat

<h1>Add a treat:</h1>
<hr />

@using (Html.BeginForm())
{
  <div>
  @Html.LabelFor(m => m.TreatName)
  @Html.TextBoxFor(m => m.TreatName)
  <br>
  @Html.LabelFor(m => m.TreatDescription)
  @Html.TextBoxFor(m => m.TreatDescription)
  <br>
  @Html.LabelFor(m => m.TreatQuantity)
  <select name="TreatQuantity">
    @for (int i = 1; i <= 10; i++)
    {
        <option value="@i">@i</option>
    }
  </select>
  <br>
  <input type="submit" class="btn btn-outline-secondary" value="Add Flavor">
  </div>
}
<br>
